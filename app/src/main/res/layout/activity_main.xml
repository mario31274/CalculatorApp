<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toTopOf="@+id/textViewAnswer" />

    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textAlignment="viewEnd"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"
        app:layout_constraintBottom_toBottomOf="@+id/textViewQuestion"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutV"
        android:layout_marginBottom="6dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:text="@string/buttonC"
                android:textSize="32sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onClearClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_backspace"
                android:textAlignment="center"
                app:icon="@drawable/baseline_backspace_24"
                app:iconTint="@color/btnBackground2"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onBackspaceClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_mod"
                android:textSize="32sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onOperatorClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_div"
                android:textSize="32sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onOperatorClick">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:text="@string/button7"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button8"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button9"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_multiply"
                android:textSize="32sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onOperatorClick">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:text="@string/button4"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button5"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button6"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_minus"
                android:textSize="32sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onOperatorClick">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:text="@string/button1"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button2"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button3"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_plus"
                android:textSize="32sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onOperatorClick">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:text="@string/buttonAC"
                android:textSize="20sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onAllClearClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button0"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_dot"
                android:textSize="32sp"
                style="@style/digitButton"
                android:layout_margin="12dp"
                android:onClick="onDigitClick">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:text="@string/button_eq"
                android:textSize="32sp"
                style="@style/operatorButton"
                android:layout_margin="12dp"
                android:onClick="onEqualClick">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>